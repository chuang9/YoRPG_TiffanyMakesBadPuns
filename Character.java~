public class Character{
    protected String name;
    protected int health;
    protected int strength;
    protected int defense;
    protected double atkRating;
    public boolean isAlive() {
        return health > 0;
    }
    public String getName(){
	return name;
    }
    public int getDefense(){
        return defense;
    }
    public void lowerHP(int damage){
        health-=damage;
    }
    public int attack(Character c){
        int d = (int)(strength * atkRating)-c.defense;
        c.lowerHP(d);
        return d;
    }
    public void specialize(){
        defense-=5;
        atkRating+=0.4;
    }
    public void normalize(){
        defense = 20;
        atkRating = 0.4;
    }
    public static String about(){
        String ret="\n";
	ret+="Warrior: Warriors are noble and skilled. They have the ability to use" ;
	ret+= "Monsters. \n";
	ret+= "Mage: Magical people. Be careful of their powers.\n";
	ret+= "Rogue: Micreants.\n";
	ret+= "Dragon: Breathe fire.\n";
	ret+= "Fairy: Likes unicorns and lives in Rainbows.\n";
	return ret;
    }

}
